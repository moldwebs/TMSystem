{% extends 'backend/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
                        <div><h6 class="card-title">{% block body_title %}{% endblock %}</h6></div>
                        <div>{% block body_edit %}{% endblock %}</div>
                    </div>
                    <div class="table-responsive">
                        {{ sg_datatables_render_html(datatable) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ sg_datatables_render_js(datatable) }}
{% endblock %}
